<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="20dp"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/purple_500"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/muli_black"
            android:padding="5dp"
            android:text="@string/exercise_name"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/light_white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/exercise_image"
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="65dp"
            tools:ignore="ContentDescription"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exercise_repetitions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/muli_black"
                android:text="@string/exercise_repetitions"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/light_white"
                android:textSize="13sp"
                tools:ignore="SmallSp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exercise_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/muli_black"
                android:text="@string/exercise_duration"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/light_white"
                android:textSize="13sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repetitions_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/muli_black"
                android:text="@string/repetitions_number"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/light_white"
                android:textSize="25sp"
                tools:ignore="SmallSp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/duration_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/muli_black"
                android:text="@string/duration_number"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/light_white"
                android:textSize="25sp"
                tools:ignore="SmallSp" />
        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>